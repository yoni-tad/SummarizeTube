{
  "manifest_version": 3,
  "name": "SummarizeTube",
  "version": "1.0.0",
  "description": "Summarize YouTube videos with a single click.",
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["sidePanel", "tabs", "storage"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y"
      }
    }
  },
  "action": {
    "default_icon": {
      "16": "assets/logo.png",
      "48": "assets/logo.png",
      "128": "assets/logo.png"
    }
  },
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["src/content.js"]
    }
  ]
}
